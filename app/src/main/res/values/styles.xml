<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary1</item>
        <item name="colorPrimaryDark">@color/colorSecondary1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Calendar theme. -->
    <style name="Calendar" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/CalendarMonthName</item>
        <item name="styleCaldroidNormalCell">@style/CalendarNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CalendarSquareCell</item>
        <item name="styleCaldroidGridView">@style/CalendarGridView</item>
        <item name="styleCaldroidLeftArrow">@style/CalendarLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CalendarRightButton</item>
        <item name="styleCaldroidWeekdayView">@style/CalendarWeekday</item>
    </style>

    <style name="CalendarArrowButton">
    <item name="android:layout_width">20dp</item>
    <item name="android:layout_height">20dp</item>
    </style>

    <style name="CalendarLeftButton" parent="CalendarArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/left_arrow</item>
        <item name="android:layout_marginTop">2.5dp</item>
    </style>

    <style name="CalendarRightButton" parent="CalendarArrowButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/right_arrow</item>
        <item name="android:layout_marginTop">2.5dp</item>
    </style>

    <style name="CalendarViewLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="CalendarMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/colorPrimary1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="CalendarGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="CalendarDefaultCell">
        <item name="android:textColor">@drawable/calendar_cell_txtcolor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CalendarNormalCell" parent="CalendarDefaultCell">
    </style>

    <style name="CalendarSquareCell" parent="CalendarDefaultCell">
        <item name="android:background">@drawable/calendar_cell</item>
    </style>

    <style name="CalendarWeekday">
        <item name="android:textColor">@color/colorPrimary1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

</resources>
